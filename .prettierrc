{
  "overrides": [
    {
      "files": ["**.ts", "**.js"],
      "options": {
        "printWidth": 145,
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "useTabs": false,
        "endOfLine": "auto"
      }
    },
    {
      "files": "**.yml",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": "**.json",
      "options": {
        "trailingComma": "none",
        "tabWidth": 2,
        "printWidth": 200
      }
    }
  ]
}
